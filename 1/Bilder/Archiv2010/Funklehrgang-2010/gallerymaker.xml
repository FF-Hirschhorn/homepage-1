    <mx:application xmlns="*" backgroundcolor="#000000" xmlns:mx="http://www.macromedia.com/2005/mxml" >
        <mx:model id="appearance" >
            <background>
                <backgroundColor>4D4D4D</backgroundColor>
            </background>
            <pageOptions>
                <showCaptions>true</showCaptions>
                <includeSoundEffects>false</includeSoundEffects>
                <pageTitle>Eigene Bilder</pageTitle>
                <pageSubtitle></pageSubtitle>
            </pageOptions>
        </mx:model>
        <mx:model id="metadata" ></mx:model>
        <!-- Views -->
        <mx:vbox>
            <mx:vbox verticalalign="middle" >
                <mx:label text="Titel:" ></mx:label>
                <mx:textinput width="143" maxchars="50" editable="true" id="titleView" ></mx:textinput>
            </mx:vbox>
            <mx:vbox verticalalign="middle" >

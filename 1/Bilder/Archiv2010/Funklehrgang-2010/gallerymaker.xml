                <mx:textinput width="143" maxchars="50" editable="true" id="subtitleView" ></mx:textinput>
            </mx:vbox>
            <mx:hbox verticalalign="middle" >
                <mx:label text="Hintergrundfarbe:" ></mx:label>
                <mx:colorpicker id="backgroundColorView" ></mx:colorpicker>
            </mx:hbox>
            <mx:vbox verticalalign="middle" >
                <mx:checkbox id="includeSoundEffectsView" label="Mit Audioeffekten" ></mx:checkbox>
            </mx:vbox>
        </mx:vbox>
        <!-- Bindings -->
        <mx:binding destination="appearance.pageOptions.pageTitle" source="titleView.text" ></mx:binding>
        <mx:binding destination="titleView.text" source="appearance.pageOptions.pageTitle" ></mx:binding>
        <mx:binding destination="appearance.pageOptions.pageSubtitle" source="subtitleView.text" ></mx:binding>
        <mx:binding destination="subtitleView.text" source="appearance.pageOptions.pageSubtitle" ></mx:binding>
        <mx:binding destination="appearance.background.backgroundColor" source="backgroundColorView.selectedColor" ></mx:binding>
        <mx:binding destination="backgroundColorView.selectedColor" source="appearance.background.backgroundColor" ></mx:binding>
        <mx:binding destination="appearance.pageOptions.includeSoundEffects" source="includeSoundEffectsView.selected" ></mx:binding>
